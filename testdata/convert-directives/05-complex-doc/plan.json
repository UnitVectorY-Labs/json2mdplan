{
  "version": 1,
  "settings": {
    "base_heading_level": 1
  },
  "directives": [
    {
      "op": "heading",
      "level": 1,
      "text": {"kind": "value", "value": {"path": "/title", "from": "root"}}
    },
    {
      "op": "text_line",
      "text": {"kind": "value", "value": {"path": "/summary", "from": "root"}}
    },
    {
      "op": "heading",
      "level": 2,
      "text": {"kind": "literal", "literal": "Metadata"}
    },
    {
      "op": "with_scope",
      "value": {"path": "/metadata", "from": "root"},
      "do": [
        {
          "op": "labeled_value_line",
          "label": {"kind": "literal", "literal": "Author"},
          "value": {"path": "/author", "from": "current"}
        },
        {
          "op": "labeled_value_line",
          "label": {"kind": "literal", "literal": "Date"},
          "value": {"path": "/date", "from": "current"}
        },
        {
          "op": "labeled_value_line",
          "label": {"kind": "literal", "literal": "Version"},
          "value": {"path": "/version", "from": "current"}
        }
      ]
    },
    {
      "op": "heading",
      "level": 2,
      "text": {"kind": "literal", "literal": "Key Findings"}
    },
    {
      "op": "bullet_list",
      "items": {"path": "/findings", "from": "root"},
      "item_format": "text"
    },
    {
      "op": "heading",
      "level": 2,
      "text": {"kind": "literal", "literal": "Recommendations"}
    },
    {
      "op": "for_each",
      "array": {"path": "/recommendations", "from": "root"},
      "do": [
        {
          "op": "heading",
          "level": 3,
          "text": {
            "kind": "concat",
            "concat": [
              {"kind": "value", "value": {"path": "/id", "from": "current"}},
              {"kind": "literal", "literal": ": "},
              {"kind": "value", "value": {"path": "/title", "from": "current"}}
            ]
          }
        },
        {
          "op": "labeled_value_line",
          "label": {"kind": "literal", "literal": "Priority"},
          "value": {"path": "/priority", "from": "current"}
        }
      ]
    }
  ]
}
