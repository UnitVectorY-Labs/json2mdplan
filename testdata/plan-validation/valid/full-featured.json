{
  "version": 1,
  "settings": {
    "base_heading_level": 2,
    "null_text": "N/A"
  },
  "directives": [
    {
      "op": "heading",
      "level": 1,
      "text": {"kind": "literal", "literal": "Document Title"}
    },
    {
      "op": "text_line",
      "text": {"kind": "literal", "literal": "Introduction paragraph"}
    },
    {
      "op": "blank_line"
    },
    {
      "op": "labeled_value_line",
      "label": {"kind": "literal", "literal": "Status"},
      "value": {"path": "/status", "from": "root"}
    },
    {
      "op": "for_each",
      "array": {"path": "/items", "from": "root"},
      "do": [
        {
          "op": "heading",
          "level": 2,
          "text": {"kind": "value", "value": {"path": "/name", "from": "current"}}
        }
      ]
    },
    {
      "op": "bullet_list",
      "items": {"path": "/highlights", "from": "root"},
      "item_format": "text"
    },
    {
      "op": "if_present",
      "value": {"path": "/optional", "from": "root"},
      "mode": "non_null",
      "then": [
        {
          "op": "text_line",
          "text": {"kind": "value", "value": {"path": "/optional", "from": "root"}}
        }
      ]
    },
    {
      "op": "with_scope",
      "value": {"path": "/metadata", "from": "root"},
      "do": [
        {
          "op": "labeled_value_line",
          "label": {"kind": "literal", "literal": "Author"},
          "value": {"path": "/author", "from": "current"}
        }
      ]
    },
    {
      "op": "suppress",
      "path": "/internal",
      "reason": "Internal implementation detail not relevant for user documentation"
    }
  ]
}
